html
  head
    title Fucci Katze - Profile
    meta(name='description', content='User Profile')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/public/css/profile.css')
  body
    .container
      header.header
        h1.logo Fucci Katze
        h2#welcome Welcome, #{username}!

      .profile-container
        .profile-info
          img.profile-img(src='/public/images/default-profile.png', alt='Profile Picture')
          p.name #{username}
          p.email Email: #{email}

      a.logout-btn(href='/logout') Logout

    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')
    script(src='/public/js/profile.js')
